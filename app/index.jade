    header.page-header.clearfix.col-xs-12
      .col-xs-6
        h1.pull-left Jacob Lewis.<span class='subheader'>web_developer<span>
      .col-xs-6
        ol.pull-right.breadcrumb
          li
            a(href="#about_me").active About Me
          li
            a(href="#bit_blaster") Bit Blaster
          li
            a(href="#skills") Skills
